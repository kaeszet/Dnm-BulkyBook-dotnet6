@model Category

@{
    ViewData["Title"] = "Delete";
}


<form asp-action="Delete">
    <input asp-for="ID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DispayOrder" class="control-label"></label>
            <input asp-for="DispayOrder" disabled class="form-control" />
            <span asp-validation-for="DispayOrder" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" style="width: 150px" />
            <a asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




